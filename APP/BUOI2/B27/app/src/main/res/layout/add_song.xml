<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Album:"></TextView>

        <Spinner
            android:id="@+id/spinnerSp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="4">
        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tên BH:"></TextView>

        <EditText
            android:id="@+id/editName"
            android:layout_width="328dp"
            android:layout_height="wrap_content"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ngày ra đĩa:"></TextView>

        <EditText
            android:id="@+id/editDate"
            android:layout_width="328dp"
            android:layout_height="wrap_content"></EditText>
    </LinearLayout>

    <Button
        android:id="@+id/btnAddSong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#D6CFCF"
        android:text="Thêm bài hát"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textAllCaps="false"></Button>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/listSong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:listSelector="@color/design_default_color_error"></ListView>
    </LinearLayout>
</LinearLayout>