<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B8B8B8"

    android:backgroundTint="#BFBEBE"
    android:orientation="vertical"
    android:paddingLeft="5dp">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="New contact"
        android:textColor="#FDFCFC"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:background="#040303"
        android:padding="5dp"
        android:paddingTop="0dp">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="104dp"
            android:layout_height="42dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:background="#FFFFFF"
            android:text="Mobile"
            android:textColor="#070707" />

        <EditText
            android:id="@+id/editTextText9"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@id/imageView7"
            android:background="#8F8B8B"
            android:backgroundTint="#FBFBFB"
            android:ems="10"
            android:inputType="text"
            android:text="Name"
            android:textColor="#807F7F" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="44dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="2dp"
            android:background="#F6F2F2"
            app:srcCompat="@android:drawable/ic_delete" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="#7C7979"
        android:text="Send email"
        android:textColor="#FDFDFD"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="#040303"
        android:padding="5dp"
        android:paddingTop="0dp">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="104dp"
            android:layout_height="42dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:background="#FFFFFF"
            android:contextClickable="false"
            android:elegantTextHeight="false"
            android:padding="10dp"
            android:text="Home"
            android:textAlignment="center"
            android:textColor="#070707"
            android:textIsSelectable="false" />

        <EditText
            android:id="@+id/editTextText9"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@id/imageView7"
            android:background="#8F8B8B"
            android:backgroundTint="#FBFBFB"
            android:ems="10"
            android:inputType="text"
            android:text="Name"
            android:textColor="#807F7F" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="44dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="2dp"
            android:background="#F6F2F2"
            app:srcCompat="@android:drawable/ic_delete" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:background="#7C7979"
        android:text="Other Information"
        android:textColor="#FDFDFD"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#040303"
        android:padding="5dp"
        android:paddingTop="0dp">

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="258dp"
            android:layout_height="43dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#EDE3E3"
            android:backgroundTint="#EDE3E3" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="104dp"
            android:layout_height="42dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:background="#020202"
            android:contextClickable="false"
            android:elegantTextHeight="false"
            android:padding="10dp"
            android:text="RingStone"
            android:textAlignment="center"
            android:textColor="#FBFBFB"
            android:textIsSelectable="false" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="#040303"
        android:padding="5dp"
        android:paddingTop="0dp">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="307dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:background="#090808"
            android:contextClickable="false"
            android:elegantTextHeight="false"
            android:padding="10dp"
            android:text="Send calls directly to voicemail."
            android:textAlignment="center"
            android:textColor="#FFFEFE"
            android:textIsSelectable="false"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentRight="true"
            android:background="#DFD9D9"
            app:srcCompat="?android:attr/textCheckMark" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="116dp">

        <Button
            android:id="@+id/button13"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@android:drawable/ic_input_add"
            android:gravity="center|left"
            android:text="More infor"
            android:textAllCaps="false"
            android:textSize="24sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button6"
            android:layout_width="169dp"
            android:layout_height="61dp"
            android:layout_gravity="right|center_vertical"
            android:text="Discard Changes"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/button11"
            android:layout_width="172dp"
            android:layout_height="69dp"
            android:layout_gravity="left|center_vertical"
            android:text="Save" />
    </FrameLayout>

</LinearLayout>